<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.UpgradeFragment"
    android:background="@drawable/gradient_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapedImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_up_arrow1"
        app:shapeAppearanceOverlay="@style/roundedCorners"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:rotation="180"/>

    <LinearLayout
        android:id="@+id/feature_list"
        android:layout_height="wrap_content"
        android:layout_width="270dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/shapedImage"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_stars_24"
            android:text="Доступ к самым сложным урокам"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_stars_24"
            android:text="Никакой рекламы"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_stars_24"
            android:text="Работа над вашими ошибками"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00$ / месяц"
        android:layout_below="@id/feature_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

</RelativeLayout>